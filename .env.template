# ChainGuardian Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# SOLANA RPC CONFIGURATION
# =============================================================================
# Solana RPC endpoint - use your preferred RPC provider
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_KEY
# SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Optional: API key for authenticated RPC endpoints
API_KEY=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the HTTP API server
SERVICE_PORT=8080

# Number of Julia threads to use
THREADS=8

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Birdeye API for token liquidity and pricing data
# Get your API key at: https://birdeye.so/
BIRDEYE_API_KEY=

# Helius API for enhanced Solana data
# Get your API key at: https://helius.xyz/
HELIUS_API_KEY=

# QuickNode API for high-performance RPC
# Get your API key at: https://quicknode.com/
QUICKNODE_API_KEY=

# =============================================================================
# SWARM ORCHESTRATION
# =============================================================================
# Number of swarm workers to initialize
SWARM_WORKERS=7

# Task timeout in seconds
TASK_TIMEOUT=300

# Worker heartbeat interval in seconds
WORKER_HEARTBEAT_INTERVAL=30

# =============================================================================
# RISK ANALYSIS CONFIGURATION
# =============================================================================
# Enable/disable specific analysis modules
TOKEN_ANALYSIS_ENABLED=true
TX_ANALYSIS_ENABLED=true
AIRDROP_ANALYSIS_ENABLED=true

# Maximum number of transactions to analyze
MAX_TX_HISTORY=100

# Liquidity threshold for flagging low-liquidity tokens (0.0 - 1.0)
LIQUIDITY_THRESHOLD=0.2

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Rate limiting settings
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Caching settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable CORS for web frontend
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*

# API authentication (optional)
# API_AUTH_ENABLED=false
# API_AUTH_TOKEN=your-secret-token

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================
# Discord webhook for alerts (optional)
# DISCORD_WEBHOOK_URL=

# Slack webhook for alerts (optional)
# SLACK_WEBHOOK_URL=

# Enable performance monitoring
PERFORMANCE_MONITORING=true

# =============================================================================
# JUDGING BONUS FEATURES
# =============================================================================
# Enable additional features for judging bonus

# Real-time WebSocket updates
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8081

# Machine learning risk scoring
ML_RISK_SCORING=true

# Historical trend analysis
HISTORICAL_ANALYSIS=true

# Multi-chain support (future expansion)
MULTI_CHAIN_SUPPORT=false

# Advanced MEV detection
MEV_DETECTION_ENABLED=true

# Social sentiment analysis
SOCIAL_SENTIMENT_ENABLED=false

# DeFi protocol risk analysis
DEFI_PROTOCOL_ANALYSIS=true

# NFT collection risk analysis
NFT_RISK_ANALYSIS=true

# Cross-chain bridge risk analysis
BRIDGE_RISK_ANALYSIS=true

# Governance token analysis
GOVERNANCE_ANALYSIS=true